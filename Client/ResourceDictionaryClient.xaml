<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="TextBlock" x:Key="LoginHeading">
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="40"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style TargetType="TextBox" x:Key="LoginName">
        <Setter Property="Height" Value="50"/>
        <Setter Property="MinHeight" Value="50"/>
        <Setter Property="Margin" Value="15"/>
        <Setter Property="Foreground" Value="#EEEEEE"/>
        <Setter Property="PlaceholderText" Value="Username"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="Padding" Value="10,12,6,6"/>
    </Style>
    
    <Style TargetType="PasswordBox" x:Key="LoginPassword">
        <Setter Property="Height" Value="50"/>
        <Setter Property="MinHeight" Value="50"/>
        <Setter Property="Margin" Value="15"/>
        <Setter Property="Foreground" Value="#EEEEEE"/>
        <Setter Property="PlaceholderText" Value="Password"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="Padding" Value="10,12,6,6"/>
    </Style>

    <Style TargetType="Button" x:Key="LoginButton">
        <Setter Property="MinHeight" Value="60"/>
        <Setter Property="Width" Value="400"/>
        <Setter Property="Margin" Value="15"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Content" Value="Inloggen"/>
    </Style>
</ResourceDictionary>
